@{ 
    @model WishViewModel
    ViewData["Title"] = "Přidat přání";
}

<h1 class="text-center">Přidat přání</h1>

<form asp-controller="Wishes" asp-action="New" enctype="multipart/form-data" method="post" style="margin: 20px 0px;">
    <div class="form-group input-group-sm">
        <label asp-for="Id"></label>
        <input asp-for="Id" type="text" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="SubTitle"></label>
        <input asp-for="SubTitle" type="text" class="form-control" />
        <span asp-validation-for="SubTitle" class="text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="text" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="ThumbnailImage"></label>
        <input asp-for="ThumbnailImage" type="file" class="form-control-file" />
        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control-file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div>
        <div style="margin-bottom: 10px;">Link #1</div>
        <div class="form-group input-group-sm" style="margin-left: 20px;">
            <label asp-for="Links[0].Text"></label>
            <input asp-for="Links[0].Text" type="text" class="form-control" />
        </div>
        <div class="form-group input-group-sm" style="margin-left: 20px;">
            <label asp-for="Links[0].Url"></label>
            <input asp-for="Links[0].Url" type="text" class="form-control" />
        </div>
    </div>
    <div>
        <div style="margin-bottom: 10px;">Link #2</div>
        <div class="form-group input-group-sm" style="margin-left: 20px;">
            <label asp-for="Links[1].Text"></label>
            <input asp-for="Links[1].Text" type="text" class="form-control" />
        </div>
        <div class="form-group input-group-sm" style="margin-left: 20px;">
            <label asp-for="Links[1].Url"></label>
            <input asp-for="Links[1].Url" type="text" class="form-control" />
        </div>
    </div>
    <input type="submit" class="btn btn-primary btn-sm" />
</form>
